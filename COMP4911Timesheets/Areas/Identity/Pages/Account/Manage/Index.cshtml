@page
@model IndexModel
@inject UserManager<Employee> UserManager
@{
    ViewData["Title"] = "Account";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6 col-lg-6 well bs-component">
        @{ var user = await UserManager.FindByNameAsync(User.Identity.Name); }
        <form id="profile-form" method="post">
            <div class="form-group">
                <label asp-for="@user.VacationTime"></label>
                <input asp-for="@user.VacationTime" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="@user.FlexTime"></label>
                <input asp-for="@user.FlexTime" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="@user.Supervisor"></label>
                <input asp-for="@user.Supervisor.Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="@user.Approver"></label>
                <input asp-for="@user.Approver.Email" class="form-control" disabled />
            </div>
            @*<button id="update-profile-button" type="submit" class="btn btn-primary btn-raised">Save</button>*@
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}