@model IEnumerable<COMP4911Timesheets.Models.WorkPackage>

@{
    ViewData["Title"] = "Index";
}

<h1>WorkPackage</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">

    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.WorkPackageCode)
    </div>
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.Name)
    </div>
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.Description)
    </div>
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.Contractor)
    </div>
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.Purpose)
    </div>
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.Activity)
    </div>
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.Project)
    </div>
    <div class="col-xs-1">
        @Html.DisplayNameFor(model => model.ParentWorkPackage)
    </div>
</div>

@foreach (var item in Model)
{
    @if (item.WorkPackageCode.Length == 5)
    {
        <div class="collapsed row" data-toggle="collapse" data-target=".w-@item.WorkPackageCode" id="@item.WorkPackageCode">

            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.WorkPackageCode)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Description)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Contractor)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Purpose)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Activity)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Project.ProjectCode)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.ParentWorkPackage.WorkPackageCode)
            </div>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@item.WorkPackageId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.WorkPackageId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.WorkPackageId">Delete</a>
        </div>
    }
    @if (item.WorkPackageCode.Length != 5)
    {
        <div class="row collapse w-@item.WorkPackageCode.Substring(0, @item.WorkPackageCode.Length-1)" data-toggle="collapse" data-target=".w-@item.WorkPackageCode" id="@item.WorkPackageCode">
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.WorkPackageCode)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Description)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Contractor)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Purpose)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Activity)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.Project.ProjectCode)
            </div>
            <div class="col-xs-1">
                @Html.DisplayFor(modelItem => item.ParentWorkPackage.WorkPackageCode)
            </div>
        </div>
        <div  class="row collapse w-@item.WorkPackageCode.Substring(0, @item.WorkPackageCode.Length-1)" data-toggle="collapse" data-target=".w-@item.WorkPackageCode" id="@item.WorkPackageCode">
            <a asp-action="Edit" asp-route-id="@item.WorkPackageId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.WorkPackageId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.WorkPackageId">Delete</a>
        </div>
    }
}


